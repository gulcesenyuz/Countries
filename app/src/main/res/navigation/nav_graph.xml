<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/destination_home">
    <fragment
        android:id="@+id/destination_home"
        android:name="com.example.countries.ui.fragment.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_destination_home_to_destination_detail"
            app:destination="@id/destination_detail" />
    </fragment>
    <fragment
        android:id="@+id/destination_saved"
        android:name="com.example.countries.ui.fragment.SavedCountriesFragment"
        android:label="SavedCountriesFragment" >
        <action
            android:id="@+id/action_destination_saved_to_destination_detail"
            app:destination="@id/destination_detail" />
    </fragment>
    <fragment
        android:id="@+id/destination_detail"
        android:name="com.example.countries.ui.fragment.DetailFragment"
        android:label="DetailFragment" >
        <action
            android:id="@+id/action_destination_detail_to_destination_home"
            app:destination="@id/destination_home" />
        <argument
            android:name="country"
            app:argType="com.example.countries.data.model.CountryModel" />
    </fragment>
</navigation>