<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.countries.ui.fragment.HomeFragment"
        android:label="home_fragment"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.countries.ui.fragment.DetailFragment"
        android:label="detail_fragment"
        tools:layout="@layout/fragment_detail" />
    <fragment
        android:id="@+id/favouritesFragment"
        android:name="com.example.countries.ui.fragment.SavedCountriesFragment"
        android:label="fragment_favourites"
        tools:layout="@layout/fragment_saved_countries" >
        <action
            android:id="@+id/action_favouritesFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
</navigation>